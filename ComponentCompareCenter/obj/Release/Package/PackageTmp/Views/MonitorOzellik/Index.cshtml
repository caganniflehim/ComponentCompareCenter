@model IPagedList<ComponentCompareCenter.Models.Siniflar.MonitorOzellik>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Monitör Kartı Özellik </h2>
<table class="table table-primary table-hover">
    <tr>
        <th>ID</th>
        <th>Urun Adı</th>
        <th>Fiyat</th>
        <th>Ekran Boyutu</th>
        <th>Yenileme Hızı</th>
        <th>Ekran Çözünürlüğü</th>
        <th>Ekran Teknolojisi</th>
        <th>Tepki Süresi</th>
        <th>HDMI</th>
        <th>Disply Port</th>
        <th>Hoperlor</th>
        <th>Çıkış Yılı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.ID
            </td>
            <td>
                @k.Uruns.UrunAd
            </td>
            <td>
                @k.Fiyat
            </td>
            <td>
                @k.EkranBoyutu
            </td>
            <td>
                @k.YenilemeHizi
            </td>
            <td>
                @k.EkranCozunurlugu
            </td>
            <td>
                @k.EkranTeknolojisi
            </td>
            <td>
                @k.TepkiSuresi
            </td>
            <td>
                @k.HDMI
            </td>
            <td>
                @k.DisplayPort
            </td>
            <td>
                @k.Hoperlor
            </td>
            <td>
                @k.CikisYili
            </td>

            <td><a href="/MonitorOzellik/MonitorOzellikSil/@k.ID" class="btn btn-danger">Sil</a></td>

            <td><a href="/MonitorOzellik/MonitorOzellikGetir/@k.ID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }

</table>
<a href="/MonitorOzellik/MonitorOzellikEkle" class="btn btn-primary">Ekle</a>

<br />
<br />
@{
    var pagerOptions = new PagedListRenderOptions
    {
        LiElementClasses = new[] { "btn", "btn-light", "text-black" }
    };
}

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }), pagerOptions)