@model ComponentCompareCenter.Models.Siniflar.Uye
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>UyeGetir</h2>
<br />
@using (Html.BeginForm("UyeGuncelle", "Uye", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(x => x.uyeAd)
    @Html.TextBoxFor(x => x.uyeAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.uyeSoyad)
    @Html.TextBoxFor(x => x.uyeSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.uyeAdresi)
    @Html.TextBoxFor(x => x.uyeAdresi, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.uyeEposta)
    @Html.TextBoxFor(x => x.uyeEposta, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.uyeTelNo)
    @Html.TextBoxFor(x => x.uyeTelNo, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.uyeID)
</div>
    <button class="btn btn-warning">Güncelle</button>
}