    <div class="col-lg-6">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">

                <div class="sendmessage text-success"></div>
                <div id="errormessage"></div>
                <form action="/Home/Iletisim/" method="post" role="form">
                    <div class="form-group">
                        <input type="text" name="adsoyad" class="form-control" id="name" placeholder="Adınız Ve Soyadınız" data-rule="required" />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Mail Adresiniz" data-rule="required" />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="konu" id="subject" placeholder="Konu" data-rule="required" />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="mesaj" rows="5" data-rule="required" placeholder="Mesajınız"></textarea>
                        <div class="validation"></div>
                    </div>
                    <button type="submit" class="btn btn-light">Maili Gönder</button>
                </form>
            </div>
        </div>
    </div>

</section>


